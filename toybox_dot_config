# Toybox configuration for Alpine with musl

# General options
CONFIG_TOYBOX_CONTAINER=y
# CONFIG_TOYBOX_FIFREEZE is not set
CONFIG_TOYBOX_ICONV=y
CONFIG_TOYBOX=y
CONFIG_TOYBOX_UTMPX=y
CONFIG_TOYBOX_SHADOW=y
# CONFIG_TOYBOX_ON_ANDROID is not set
# CONFIG_TOYBOX_ANDROID_SCHEDPOLICY is not set
# CONFIG_TOYBOX_FORK is not set
CONFIG_TOYBOX_PRLIMIT=y
CONFIG_TOYBOX_GETRANDOM=y
CONFIG_FEATURE_TOYBOX=y
CONFIG_TOYBOX_FREE=y
CONFIG_TOYBOX_SUID=y
# CONFIG_TOYBOX_COPYFILERANGE is not set

# Shell options
CONFIG_FEATURE_ENV=y
CONFIG_FEATURE_SH=y
CONFIG_FEATURE_BASH=y
CONFIG_FEATURE_EXEC=y
CONFIG_FEATURE_FG=y
CONFIG_FEATURE_BG=y
CONFIG_FEATURE_JOBS=y
CONFIG_FEATURE_SETUID=y

# File utilities
CONFIG_CAT=y
CONFIG_CP=y
CONFIG_MV=y
CONFIG_RM=y
CONFIG_TOUCH=y
CONFIG_LN=y
CONFIG_MKDIR=y
CONFIG_RMDIR=y
CONFIG_CHMOD=y
CONFIG_CHOWN=y
CONFIG_STAT=y
CONFIG_FIND=y

# System utilities
CONFIG_FEATURE_PING=y
CONFIG_FEATURE_PS=y
CONFIG_KILL=y
CONFIG_FEATURE_REBOOT=y
CONFIG_FEATURE_SHUTDOWN=y
CONFIG_FEATURE_HALT=y

# Networking utilities
CONFIG_FEATURE_IFCONFIG=y
CONFIG_FEATURE_IP=y
CONFIG_FEATURE_ROUTE=y

# Miscellaneous utilities
CONFIG_ACPI=y
CONFIG_DATE=y
CONFIG_ECHO=y
CONFIG_ENV=y
CONFIG_FEATURE_HELLO=y
CONFIG_UNAME=y
CONFIG_FEATURE_VERSIONS=y

# Enable support for musl
CONFIG_MUSL=y

# Enable support for Alpine's kernel headers
CONFIG_ALPINE_HEADERS=y

# Additional options
CONFIG_FEATURE_VERSION=y
CONFIG_FEATURE_HELP=y
